<%= form_with(model: chamado, class: "needs-validation") do |form| %>
  <% if chamado.errors.any? %>
    <div class="alert alert-danger">
      <h6 class="alert-heading"><%= pluralize(chamado.errors.count, "erro") %> impediram este chamado de ser salvo:</h6>
      <ul class="mb-0">
        <% chamado.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="card shadow-sm mb-4">
    <div class="card-header bg-light">
      <h5 class="mb-0"><i class="bi bi-calendar-event"></i> Data e Hora</h5>
    </div>
    <div class="card-body">
      <div class="row g-3">
        <div class="col-md-6">
          <%= form.label :data_solicitacao, "Data da Solicitação *", class: "form-label" %>
          <%= form.label :data_solicitacao, "Data da Solicitação *", class: "form-label" %>
          <%= gov_date_picker(form, :data_solicitacao, "Data da Solicitação", required: true) %>
        </div>
        <div class="col-md-6">
          <%= form.label :hora_solicitacao, "Hora da Solicitação *", class: "form-label" %>
          <%= form.label :hora_solicitacao, "Hora da Solicitação *", class: "form-label" %>
          <%= gov_time_picker(form, :hora_solicitacao, "Hora da Solicitação", required: true) %>
        </div>
      </div>
    </div>
  </div>

  <div class="card shadow-sm mb-4">
    <div class="card-header bg-light">
      <h5 class="mb-0"><i class="bi bi-person"></i> Solicitante</h5>
    </div>
    <div class="card-body">
      <div class="row g-3">
        <div class="col-md-6">
          <%= form.label :nome_solicitante, "Nome do Solicitante *", class: "form-label" %>
          <%= form.text_field :nome_solicitante, class: "form-control", required: true %>
        </div>
        <div class="col-md-6">
          <%= form.label :ramal, class: "form-label" %>
          <%= form.text_field :ramal, class: "form-control" %>
        </div>
        <div class="col-md-6">
          <%= form.label :setor, class: "form-label" %>
          <%= form.text_field :setor, class: "form-control" %>
        </div>
        <div class="col-md-6">
          <%= form.label :andar, class: "form-label" %>
          <%= form.text_field :andar, class: "form-control" %>
        </div>
      </div>
    </div>
  </div>

  <div class="card shadow-sm mb-4">
    <div class="card-header bg-light">
      <h5 class="mb-0"><i class="bi bi-file-text"></i> Descrição</h5>
    </div>
    <div class="card-body">
      <div class="row g-3">
        <div class="col-12">
          <%= form.label :descricao_solicitacao, "Descrição da Solicitação *", class: "form-label" %>
          <%= form.text_area :descricao_solicitacao, rows: 4, class: "form-control", required: true %>
        </div>
        <div class="col-12">
          <%= form.label :detalhe, "Detalhes Adicionais", class: "form-label" %>
          <%= form.text_area :detalhe, rows: 3, class: "form-control" %>
        </div>
      </div>
    </div>
  </div>

  <div class="card shadow-sm mb-4 border-info">
    <div class="card-header bg-info bg-opacity-10 text-dark">
      <h5 class="mb-0"><i class="bi bi-people"></i> Atribuição</h5>
    </div>
    <div class="card-body">
      <div class="row g-3">
        <div class="col-md-6">
          <%= form.label :tecnico_responsavel, "Técnico Responsável", class: "form-label" %>
          <%= form.select :tecnico_responsavel, Tecnico.nomes_ativos, { include_blank: "Não atribuído" }, class: "form-select" %>
        </div>
        <div class="col-md-6">
             <%= form.label :status, "Status Inicial", class: "form-label" %>
             <%= form.select :status, Chamado::STATUS_OPCOES, {}, class: "form-select" %>
        </div>
      </div>
    </div>
  </div>

  <% unless chamado.new_record? %>
    <div class="card shadow-sm mb-4 border-warning">
      <div class="card-header bg-warning bg-opacity-10 text-dark">
        <h5 class="mb-0"><i class="bi bi-tools"></i> Atendimento</h5>
      </div>
      <div class="card-body">
        <div class="row g-3">
          <div class="col-12">
            <%= form.label :constatado, class: "form-label" %>
            <%= form.text_area :constatado, rows: 3, class: "form-control" %>
          </div>
          <div class="col-12">
            <%= form.label :providencia, "Providência", class: "form-label" %>
            <%= form.text_area :providencia, rows: 3, class: "form-control" %>
          </div>
          <div class="col-12">
            <%= form.label :providenciado, class: "form-label" %>
            <%= form.text_area :providenciado, rows: 3, class: "form-control" %>
          </div>
           <div class="col-12">
             <%= form.label :data_fechamento, "Data de Fechamento", class: "form-label" %>
             <%= form.label :data_fechamento, "Data de Fechamento", class: "form-label" %>
             <%= gov_datetime_picker(form, :data_fechamento, "Data de Fechamento") %>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="d-flex justify-content-end gap-2 mb-5">
    <%= link_to "Voltar", root_path, class: "br-button secondary mr-3" %>
    <%= form.button class: "br-button primary" do %>
      <i class="fas fa-save mr-1"></i> Salvar Alterações
    <% end %>
  </div>
<% end %>
