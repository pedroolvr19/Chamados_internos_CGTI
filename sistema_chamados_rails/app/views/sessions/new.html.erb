<div class="row justify-content-center mt-5">
  <div class="col-md-4">
    <div class="card">
      <div class="card-header text-center">
        <h3>Login</h3>
      </div>
      <div class="card-body">
        <%= form_with url: session_path, local: true do |form| %>
          <div class="mb-3">
            <%= form.label :email_address, "Email", class: "form-label" %>
            <%= form.email_field :email_address, class: "form-control", required: true, autofocus: true %>
          </div>

          <div class="mb-3">
            <%= form.label :password, "Senha", class: "form-label" %>
            <%= form.password_field :password, class: "form-control", required: true %>
          </div>

          <div class="d-grid">
            <%= form.submit "Entrar", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
